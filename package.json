{
  "name": "btuin-monorepo",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "bun run --cwd packages/btuin src/app.ts",
    "build": "bun run --cwd packages/btuin build.ts",
    "benchmark": "bun run scripts/benchmark.ts",
    "load-test": "bun run scripts/load-test.ts",
    "stress-test": "bun run scripts/stress-test.ts",
    "lint": "oxlint packages/*",
    "lint:fix": "oxlint packages/* --fix",
    "format": "oxfmt packages/*",
    "test:all": "bun test packages",
    "test": "bun test packages/btuin",
    "profiler": "bun test scripts/profiler",
    "check": "bunx tsc --noEmit"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "oxfmt": "^0.17.0",
    "oxlint": "^1.32.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "engines": {
    "bun": "latest"
  },
  "packageManager": "pnpm@10.25.0"
}

{
  "name": "btuin",
  "version": "0.1.0",
  "description": "Fast and modern TUI framework for Bun runtime",
  "type": "module",
  "module": "./src/index.ts",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./layout": "./src/layout/index.ts",
    "./elements": "./src/elements/index.ts",
    "./buffer": "./src/buffer/index.ts",
    "./terminal": "./src/terminal/index.ts"
  },
  "files": [
    "src",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "start": "bun run src/app.ts",
    "test": "bun test",
    "lint": "bunx oxlint src",
    "lint:fix": "bunx oxlint src --fix",
    "format": "bunx oxfmt src"
  },
  "keywords": [
    "tui",
    "terminal",
    "cli",
    "bun",
    "ui",
    "framework",
    "terminal-ui",
    "console"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/btuin.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/btuin/issues"
  },
  "homepage": "https://github.com/yourusername/btuin#readme",
  "engines": {
    "bun": ">=1.0.0"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "dependencies": {
    "@btuin/types": "workspace:*"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
